<div data-role="page">
  <% if !current_user.present? %> <!-- header content -->
    <% content_for :header_title, 'How many patients did you help today?' %>
  <% else %>
    <% content_for :header_title, 'User Details' %>
  <% end  %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/flash_messages' %>

  <% if current_user.present? && policy(@user).show? %>
    <div class="wrap_section_narrow users_show_section">
      <table data-role="table" class="ui-responsive">
        <thead>
          <tr class="fullwidth">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
          </tr>
        </thead>

        <tbody>
          <% if policy(@user).show? %>
            <tr class="lineitem fullwidth">
              <td><%= @user.first_name %></td>
              <td><%= @user.last_name %></td>
              <td><%= @user.role %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if policy(@user).edit? %>
      <%= link_to 'Edit', edit_user_path(@user) %>
    <% end %>
    <% if policy(@user).index? %>
      | <%= link_to 'Residents', users_path %>
    <% end %>

  <% end %>

  <%= render 'layouts/footer' %>
</div>
