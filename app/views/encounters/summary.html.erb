<!-- Begin Page 1 -->
<div data-role="page" id="index" data-url="index" tabindex="0">

  <% if current_user.present? %>
    <% if policy(Encounter).summary? %>
      <% content_for :user_first_name_header, "All" %>
      <% content_for :user_last_name_header, "Residents" %>
    <% else %>
      <% content_for :user_first_name_header, "#{current_user.first_name}" %>
      <% content_for :user_last_name_header, "#{current_user.last_name}'s" %>
    <% end %>
  <% end %>
  <% content_for :header_title, "Summary" %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/flash_messages' %>

  <div class="wrap_section_narrow_wc" style="background-color: none">
    <div class="spacer">
      <%= render 'layouts/nav' %>
    </div>
  </div>

  <div class="wrap_section_narrow">
    <% if current_user %>
      <table data-role="table" id="encounter_encounters_table" class="encounters_summary">
        <thead>
          <tr class="fullwidth">
            <% if policy(Encounter).summary? %>
              <th>Resident</th>
            <% end %>
            <th>Type</th>
            <th>Total</th>
          </tr>
        </thead>

        <tbody>
          <% @encounters_count.each do |group, count| %>
            <% user = User.find(group[0]) %>
            <% if user == current_user %>
              <tr class="lineitem fullwidth">
                <% if policy(Encounter).summary? %>
                  <td><%= user.name %></td>
                <% end %>
                <td><%= group[1] %></td>
                <td><%= count %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="spacer">You must <%= link_to 'sign in', new_user_session_path %> to view this page.</div>
    <% end %>
  </div>

  <div class="form-block">
  </div>
  <%= render 'layouts/footer' %>
</div>
<!-- End Page 1 -->



