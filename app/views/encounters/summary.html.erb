<!-- Begin Page 1 -->
<div data-role="page" id="index" data-url="index" tabindex="0">

  <% content_for :header_title, 'Summary of Encounter Encounters' %>
  <%= render 'layouts/header' %>
  <%= render 'layouts/flash_messages' %>

  <div class="wrap_section_narrow_wc" style="background-color: none">
    <div class="spacer">
      <%= render 'layouts/nav' %>
    </div>
  </div>

  <div class="wrap_section_narrow">
    <% if current_user %>
      <table data-role="table" id="encounter_encounters_table" class="ui-responsive">
        <thead>
          <tr class="fullwidth">
            <th>Resident</th>
            <th>Type</th>
            <th>Total</th>
          </tr>
        </thead>

        <tbody>
          <% @encounters_count.each do |group, count| %>
            <% user = User.find(group[0]) %>
            <% if user == current_user || policy(Encounter).summary? %>
              <tr class="lineitem fullwidth">
                <td><%= user.name %></td>
                <td><%= group[1] %></td>
                <td><%= count %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="spacer">You must <%= link_to 'sign in', new_user_session_path %> to view this page.</div>
    <% end %>
  </div>

  <div class="form-block">
  </div>
  <%= render 'layouts/footer' %>
</div>
<!-- End Page 1 -->



